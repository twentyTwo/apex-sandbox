# Server Configuration
PORT=5000
ENV_NAME=development

# Salesforce OAuth Configuration
CLIENT_ID=your_salesforce_consumer_key_here
CLIENT_SECRET=your_salesforce_consumer_secret_here
LOGIN_CALLBACK=http://localhost:5000/logincallback

# Session Configuration
# Generate a random string for production use
SESSION_SECRET=your_random_session_secret_here

# Database Configuration
# For Docker PostgreSQL (local development)
DATABASE_URL=postgresql://apex_user:apex_password@localhost:5432/apex_sandbox
# For Heroku PostgreSQL (production)
# DATABASE_URL will be set automatically by Heroku

# Site Configuration
SITE_BASEURL=http://localhost:3000
